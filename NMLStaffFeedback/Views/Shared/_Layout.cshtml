<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Styles.Render("~/Content/css",
                   "~/Content/kendo/2015.3.930/css")

    @Scripts.Render("~/bundles/modernizr",
                    "~/bundles/jquery",
                    "~/bundles/bootstrap",
                    "~/bundles/kendo/2015.3.930/js")

    <script src="@Url.Content("~/Scripts/kendo/2015.3.930/jszip.min.js")"></script>
</head>
<body>
    <div class="navbar navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               <h4>nml<span>employee</span>feedback</h4> 
            </div>
            <div class="navbar-collapse collapse">
@if (Request.IsAuthenticated)
{
                <ul class="nav navbar-nav">
                    <li id="feedback-item">@Html.ActionLink("FEEDBACK", "Index", "Feedback", new { area = "" }, null)</li>
                   @* <li id="employee-item">@Html.ActionLink("EMPLOYEES", "Index", "Employee")</li>*@
                    <li id="question-item">@Html.ActionLink("QUESTIONS", "Index", "Question")</li>
                    <li id="answer-item">@Html.ActionLink("ANSWERS", "Index", "Answers")</li>        
                </ul>
}
            @Html.Partial("_LoginPartial") 
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @RenderSection("SPAViews", required: false)
        <hr />
    </div>
    @RenderSection("scripts", required: false)

</body>
</html>
