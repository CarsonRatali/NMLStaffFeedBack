    div body.container {
        height:80%!important;
    }

    .container.body-content {
        background-color:#F7F7F7!important;
       /* height:1000px!important;*/
    }

    .navbar.navbar-fixed-top {
        background-color:white;
    }

    body {
     /*  background-color:#22ace0;*/
